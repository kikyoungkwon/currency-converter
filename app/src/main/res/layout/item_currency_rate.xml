<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_vertical_margin"
    android:paddingStart="@dimen/common_horizontal_margin"
    android:paddingEnd="@dimen/common_horizontal_margin"
    android:paddingBottom="@dimen/common_vertical_margin">

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_horizontal_margin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textColor="@color/brand_navy_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flagImageView"
        app:layout_constraintBottom_toTopOf="@+id/nameTextView"
        tools:text="EUR"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_horizontal_margin"
        android:textSize="16sp"
        android:lines="1"
        android:textColor="@color/brand_navy_blue"
        app:layout_constraintStart_toStartOf="@+id/codeTextView"
        app:layout_constraintTop_toBottomOf="@+id/codeTextView"
        app:layout_constraintEnd_toStartOf="@+id/rateEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Euro"/>

    <EditText
        android:id="@+id/rateEditText"
        style="@style/RateTextView"
        android:backgroundTint="@color/edittext_tilt"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="989.01"/>
</androidx.constraintlayout.widget.ConstraintLayout>